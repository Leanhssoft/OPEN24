
@{
    ViewBag.Title = "Khách hàng sử dụng phần mềm Open24";

}

<link rel="stylesheet" href="~/Content/css/NewCommonUI.css" />

<style>
    :root {
        --common-main-color: #9677FF;
        --color-theme: #9677FF;
    }

    .banner-home {
        background-image: url('../../Content/images/open24/CustomerPage/banner-cus.png');
        background-size: 100% 100%;
    }

    .input-search {
        border: 1px solid #C2C9D6;
        border-radius: 8px;
        width: 100%;
        height: 40px;
        padding: 9px 4px 9px 40px;
        background: transparent url('../../content/images/open24/i-search.svg') no-repeat 13px center;
    }

        .input-search:focus {
            border-color: #1183d6;
            outline: none;
            box-shadow: 0 0 3px 0 #1183d6;
        }

    .form-select {
        border: 1px solid #C2C9D6;
        border-radius: 8px;
        width: 100%;
        height: 40px;
    }

        .form-select:focus {
            border-color: #1183d6;
            outline: none;
            box-shadow: 0 0 3px 0 #1183d6;
        }

    .btn-show-more {
        border-radius: 20px;
        height: 40px;
        border: 1px solid #C2C9D6;
        color: #525F7A;
        background: white;
        letter-spacing: 0;
    }
        .btn-show-more:hover {
            border-radius: 20px;
            height: 40px;
            border: 1px solid #C2C9D6;
            color: #319DFF;
            letter-spacing: 1.5px;
            background: white;
        }
    .btn-dang-ky-dung-thu {
        height: 40px;
        background: #FF5C35;
        text-align: center;
        padding: 7px 12px;
        font-size: 16px;
        font-weight: normal;
        border: none;
        border-radius: 20px;
        font-family: "Roboto";
        width: 175px;
        color: #FEFEFF;
        letter-spacing: 0;
        line-height: 24px;
        transition: all 0.4s ease;
    }

        .btn-dang-ky-dung-thu:hover {
            height: 40px;
            background: #FF5C35;
            text-align: center;
            padding: 7px 12px;
            font-size: 16px;
            font-weight: normal;
            border: none;
            border-radius: 20px;
            font-family: "Roboto";
            width: 175px;
            color: #FEFEFF;
            letter-spacing: 1.5px;
            line-height: 24px;
            transition: all 0.4s ease;
        }
</style>

<div id="renderNews">
    <input id="op_type" hidden value="Khachhang" />
    <div class="container-fluid op-banner" style="background: #F4F5F7">
        <div class="container ">
            <div class="op-banner-content text-start" data-aos="fade-right" style="margin-right:60px">
                <button class="btn-dang-ky-dung-thu" style="margin-bottom:16px" data-bs-toggle="modal" data-bs-target="#modalTuVan">
                    <span style="font-weight: normal">Đăng kí dùng thử</span>
                </button>
                <h1 style="font-size: 48px; font-weight: 700; color: #3D475C;margin-bottom:16px">Hân hạnh đồng hành cùng doanh nghiệp Việt Nam</h1>
                <span style="font-size: 18px; font-weight: 400; color: #525F7A">Chúng tôi luôn đồng hành cùng bạn. Thành công của bạn chính là mong muốn của chúng tôi</span>
            </div>
            <div class="op-banner-image">
                <img src="~/Content/images/open24/op-khachhang-bg.svg" style="padding:30px" alt="gara xe" />
            </div>
        </div>
    </div>

    <div class="container">
        <div class="text-center" style="margin-bottom:36px;margin-top:80px">
            <h4>Câu chuyện khách hàng của Open 24</h4>
        </div>
        <div class="row" style="margin-bottom:60px">
            <div class="col-12 col-lg-4 col-xl-4 col-md-4 col-sm-12 col-xs-12">
                <div class="search-l ">
                    <input class="input-search" type="text" placeholder="Tìm kiếm khách hàng" v-model="curentpage.text" v-on:keyup="KeymonitorCustomer" />
                </div>
            </div>
            <div class="col-12 col-lg-4 col-xl-4 col-md-4 col-sm-12 col-xs-12">
                <select class="form-select" disabled>
                    <option v-show="comboboxcut.adress.length>0" v-for="(item, index) in comboboxcut.adress">
                        <a style="text-decoration:none" href="javascript:void(0)" v-on:click="SelectAdress(item)">{{item.TEN}}</a>
                    </option>
                </select>
            </div>
            <div class="col-12 col-lg-4 col-xl-4 col-md-4 col-sm-12 col-xs-12">
                <select class="form-select" disabled>
                    <option v-for="(item, index) in comboboxcut.business" v-show="comboboxcut.business.length>0">
                        <a v-on:click="SelectBusiness(item)">{{item.TEN}}</a>
                    </option>
                </select>
            </div>
        </div>
        
        <div class="row mb-4">
            <div class="col-12 col-lg-4 col-xl-4 col-md-4 col-sm-12 col-xs-12" style="margin-bottom:60px" v-for="(item, index) in curentpage.data" v-show="curentpage.data.length>0">
                <div class="card m-2 h-100">
                    <div class="card-body">
                        <img class="w-100" height="220" v-bind:src="item.Images" v-bind:alt="item.Name" onerror="this.onerror=null;this.src='/Content/images/open24/IconHomePage/img-onerror.png';" />
                        <h4 style="color: #29303D; font-size:18px;font-weight:700">{{item.Name}}</h4>
                        <div style="height: 70px; overflow: hidden; text-overflow: ellipsis; font-size: 16px; font-weight: 400; color: #525F7A ">
                            {{item.note}}
                        </div>
                        <div class="w-100 text-center" style="margin-top:16px">
                            <a class="btn btn-show-more" href="javascript:void(0)" v-bind:href="item.Url">Xem thêm</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="text-center mb-5"><button class="btn" v-on:click="NextPageCustomer" v-show="curentpage.ishow"> Xem thêm </button></div>
    </div>
</div>


@Html.Partial("_WeareonePartial")
<div class="modal fade" id="myModal">
    <div class="modal-dialog" style="padding-top: 5%;">
        <iframe id="myVideo" width="100%" height="450px" src="" frameborder="0" allowfullscreen=""></iframe>
    </div>
</div>
